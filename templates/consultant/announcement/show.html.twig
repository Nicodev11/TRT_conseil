{% extends 'base.html.twig' %}

{% block title %}Annonce - {{ announcement.name }} {% endblock %}

{% block body %}
<div class="container">
    <div class="announcement_name mb-3">
        <h2 class="text-center text-dark fs-1">{{ announcement.name }}</h2>
    </div>
    <div class="announcement_description list-group list-group-flush">
        <div class="row">
            <div class="col-lg-8 mb-3">
                <div class="description">
                    <p class="fs-4 text-black">Description</p>
                    <p class="ms-5">{{ announcement.description|nl2br }}</p>
                </div>
            </div>
            <div class="col-lg-4">
                <p class="fs-4 text-black"> Plus d'informations</p>
                <ul class="list-group mb-5">
                    <li class="list-group-item bg-body-tertiary">
                        <p class="m-0"> Date de publication : {{ announcement.createdAt|date('d/m/Y') }} </p>
                    </li>
                    <li class="list-group-item bg-body-tertiary">
                        <p class="m-0"> Type du contrat : {{contractName}} </p>
                    </li>
                    <li class="list-group-item bg-body-tertiary">
                        <p class="m-0">Nombre d'heures : {{announcement.hours}}h</p>
                    </li>
                    <li class="list-group-item bg-body-tertiary">
                        <p class="m-0">Salaire mensuel : {{announcement.salary}}â‚¬ </p>
                    </li>
                </ul>
                <div class="card bg-body-tertiary text-center">
                    <div class="card-body">
                        <h5 class="card-title"> {{company.name}} </h5>
                        <div class="card-text">
                            <div class="address mt-2">
                                <p class="m-0"> {{company.adress}} </p>
                                <p class="m-0"> {{company.zip}} {{company.city}} </p>
                            </div>
                            <p class="mt-2 my-0"> {{company.phone}} </p>
                            <p class="m-0"> {{company.email}} </p>
                        </div>
                        <a href="{{company.website}}" class="btn btn-info mt-2"> Site internet </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}