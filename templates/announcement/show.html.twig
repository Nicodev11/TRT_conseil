{% extends 'base.html.twig' %}

{% block title %}Announce{% endblock %}

{% block body %}
    <h1>Annonce</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ announcement.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ announcement.contract_id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ announcement.description }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ announcement.hours }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ announcement.salary }}</td>
            </tr>
            <tr>
                <th>Is_valided</th>
                <td>{{ announcement.isValided ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ announcement.createdAt ? announcement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('announcement_index') }}">Retour</a>

    <a href="{{ path('announcement_edit', {'id': announcement.id}) }}">Modifier</a>

    {{ include('announcement/_delete_form.html.twig') }}
{% endblock %}
