{{ form_start(form) }}
{{ form_row(form.name , {label: 'Nom de l\'entreprise'}) }}

<fieldset>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.adress , {label: 'Adresse'}) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.zip , {label: 'Code postal'}) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.city , {label: 'Ville'}) }}
        </div>
    </div>
</fieldset>

<div class="col-md-6">
    {{ form_row(form.phone , {label: 'Téléphone'}) }}
</div>
<div class="col md-6">
    {{ form_row(form.email , {label: 'Email'}) }}
</div>
{{ form_row(form.description , {label: 'Description'}) }}
<div class="col-md-6">
    {{ form_row(form.website , {label: 'Site web'}) }}
</div>

    <button class="btn btn-success float-end mt-3">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}

{% block javascripts %}
    {{ encore_entry_script_tags('company') }}
{% endblock %}
