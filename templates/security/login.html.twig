{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que : {{ app.user.userIdentifier }}, 
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                <label for="inputEmail">Adresse email</label>
                <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-2"
                    autocomplete="username" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn btn-primary float-end mt-3" type="submit">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
    
</div>

{% endblock %}
